 <form action="/dashboard/addplacemark" method="POST">
    <h1 class="label">Add a new Placemark</h1>
    <div class="field">
      <input class="input" type="text" placeholder="name" name="name">
    </div>
    <div class="field">
      <input class="input" type="text" placeholder="description" name="description">
    </div>
    <div class="field">
      <input class="input" type="text" placeholder="latitude" name="latitude">
    </div>
    <div class="field">
      <input class="input" type="text" placeholder="longitude" name="longitude">
    </div>
    <button class="button is-link">Add Placemark</button>
  </form>