{{> admin-menu}}

<form class="box"  action="/updateuser/{{user._id}}" method="POST">
  <h1 class="title" >Update user Details:</h1>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" name="firstName", value="{{user.firstName}}">
      </div>
      <div class="field">
        <input class="input" type="text" name="lastName" value="{{user.lastName}}">
      </div>
      <div class="field">
        <input class="input" type="text"  name="email" value="{{user.email}}">
      </div>
      <div class="field">
        <input class="input" type="text"  name="password" value="{{user.password}}">
      </div>
    </div>
  </div>
  <button class="button is-primary">Update user</button>
</form>